<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> を発見したので "未登録" です。以下のエラーを解消して下さい。</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :第 %><%= f.text_field :no, :size=>"2" %><%= f.label :回  %> 
    <%= f.label :すくすくスクラム %> <%= f.label :～ %><%= f.text_field :name, :size=>"40" %><%= f.label :〜 %>　
    <%= f.label :定員 %><%= f.text_field :capacity, :size=>"2" %> <%= f.label :名 %><br /><br />
    <%= f.label :概要 %><br /><%= f.text_area :summary %><br /><br />
  </div>
  <div class="actions">
    <%= f.submit %><br />
    <input type="image" src="/images/new_thread.jpeg" name="commit" id="event_submit" value="submit" alt="Create Event" border="0">
  </div>
<% end %>
