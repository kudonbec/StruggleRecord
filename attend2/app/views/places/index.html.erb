<h1>会場一覧</h1>

<div align="right"><%= link_to image_tag('/images/NewPlace.jp2', { :border => '0', :alt => 'New Place'}), new_place_path %></div>

<table>
  <tr>
    <th>名前</th>
    <th>場所</th>
    <th>URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.adress %></td>
    <td><%= place.url %></td>
    <td><%= link_to 'Show', place %> | <%= link_to image_tag('/images/Show.jp2', { :border => '0', :alt => 'Show'}), place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %> | <%= link_to image_tag('/images/Edit.jp2', { :border => '0', :alt => 'Edit'}), edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

